<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<StackPane prefHeight="1024.0" prefWidth="1440.0" stylesheets="@main.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.together.controller.TaskListController">
    <Rectangle arcHeight="50.0" arcWidth="50.0" fill="#fff6ed" height="1024.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" styleClass="drop-shadow" width="1300.0" StackPane.alignment="CENTER_RIGHT" />
    <Rectangle arcHeight="50.0" arcWidth="50.0" fill="WHITE" height="1024.0" layoutX="150.0" layoutY="10.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" styleClass="drop-shadow" width="424.0" StackPane.alignment="CENTER_RIGHT" />
    <BorderPane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
       <left>
           
           
           
           

           <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="130.0">
               <children>
                   <Button fx:id="settingsButton" mnemonicParsing="false" styleClass="transparent-button">
                       <graphic>
                           <FontIcon fill="#fff6ed" iconLiteral="fa-cog" iconSize="40" />
                       </graphic>
                   </Button>
                   <VBox alignment="BOTTOM_CENTER" VBox.vgrow="ALWAYS">
                       <children>
                           <Button fx:id="groupButton" mnemonicParsing="false" styleClass="transparent-button">
                               <graphic>
                                   <FontIcon fill="#fff6ed" iconLiteral="fa-users" iconSize="40" />
                               </graphic>
                           </Button>
                           <Button fx:id="listButton" mnemonicParsing="false" styleClass="transparent-button">
                               <graphic>
                                   <FontIcon fill="#fff6ed" iconLiteral="fa-list" iconSize="40" />
                               </graphic>
                           </Button>
                           <Button fx:id="homeButton" mnemonicParsing="false" styleClass="transparent-button">
                               <graphic>
                                   <FontIcon fill="#fff6ed" iconLiteral="fa-home" iconSize="40" />
                               </graphic>
                           </Button>
                       </children>
                       <padding>
                           <Insets bottom="15.0" left="5.0" right="5.0" top="15.0" />
                       </padding>
                   </VBox>
               </children>
               <VBox.margin>
                   <Insets top="15.0" />
               </VBox.margin>
               <padding>
                   <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
           </VBox>

       </left>
        <right>
            <VBox prefHeight="200.0" prefWidth="424.0" BorderPane.alignment="CENTER">
                <children>
                    <HBox prefHeight="100.0" prefWidth="200.0">
                        <children>
                            <ImageView fitHeight="117.0" fitWidth="117.0" pickOnBounds="true" preserveRatio="true" />
                            <VBox prefHeight="200.0" prefWidth="100.0">
                                <children>
                                    <Label text="USERNAME" />
                                    <Button mnemonicParsing="false" onAction="#openProfile" styleClass="darkButton" text="Profile">
                                        <font>
                                            <Font name="JetBrains Mono SemiBold" size="12.0" />
                                        </font></Button>
                                </children>
                            </VBox>
                        </children>
                    </HBox>
                    <Label text="My Groups">
                        <font>
                            <Font name="JetBrains Mono Medium" size="12.0" />
                        </font></Label>
                    <Label text="My friends">
                        <font>
                            <Font name="JetBrains Mono Medium" size="12.0" />
                        </font></Label>
                </children>
                <padding>
                    <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
                </padding>
            </VBox>
        </right>
        <center>
            <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                <children>
                    <VBox HBox.hgrow="ALWAYS">
                        <children>
                            <Label text="My Tasks" />
                            <ListView fx:id="taskListView" prefHeight="200.0" prefWidth="200.0" styleClass="list-view-no-background" />
                            <Button mnemonicParsing="false" onAction="#newTask" styleClass="darkButton" text="New" />
                        </children>
                        <HBox.margin>
                            <Insets />
                        </HBox.margin>
                        <padding>
                            <Insets bottom="50.0" left="50.0" right="50.0" top="35.0" />
                        </padding>
                    </VBox>
                    <VBox HBox.hgrow="ALWAYS">
                        <children>
                            <Label text="My Habits" />
                            <ListView fx:id="habitListView" prefHeight="200.0" prefWidth="200.0" styleClass="list-view-no-background" />
                        </children>
                        <padding>
                            <Insets bottom="50.0" left="50.0" right="50.0" top="35.0" />
                        </padding>
                    </VBox>
                </children>
            </HBox>
        </center></BorderPane>
    <VBox fx:id="taskPopup" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="700.0" prefWidth="400.0" visible="false">
        <children>
            <Label text="Name">
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </padding>
                <font>
                    <Font name="JetBrains Mono Medium" size="18.0" />
                </font></Label>
            <TextField fx:id="textfieldName" />
            <Label text="Date">
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </padding>
                <font>
                    <Font name="JetBrains Mono Medium" size="18.0" />
                </font></Label>
            <DatePicker fx:id="datePicker" />
            <Label text="Info">
                <padding>
                    <Insets bottom="5.0" top="5.0" />
                </padding>
                <font>
                    <Font name="JetBrains Mono Medium" size="18.0" />
                </font></Label>
            <TextArea fx:id="textAreaInfo" prefHeight="200.0" prefWidth="200.0">
                <padding>
                    <Insets bottom="5.0" top="5.0" />
                </padding></TextArea>
            <CheckBox fx:id="checkBox" mnemonicParsing="false" onAction="#habitToggle" text="Habit?">
                <padding>
                    <Insets top="5.0" />
                </padding>
                <font>
                    <Font name="JetBrains Mono Medium" size="18.0" />
                </font></CheckBox>
            <HBox fx:id="habitbox" alignment="CENTER" prefHeight="100.0" visible="false">
                <children>
                    <Label text="Repeat every...">
                        <font>
                            <Font name="JetBrains Mono Medium" size="18.0" />
                        </font></Label>
                   <Spinner fx:id="spinnerHabit" prefWidth="70.0">
                        <HBox.margin>
                            <Insets left="10.0" right="10.0" />
                        </HBox.margin>
                    </Spinner>
                    <Label text="days">
                        <font>
                            <Font name="JetBrains Mono Medium" size="18.0" />
                        </font></Label>
                </children>
            </HBox>
            <HBox alignment="BOTTOM_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                <children>
                    <Button mnemonicParsing="false" onAction="#editTask" styleClass="darkButton" text="Save">
                        <font>
                            <Font size="18.0" />
                        </font>
                    </Button>
                    <Button mnemonicParsing="false" onAction="#closePopup" styleClass="lightButton" text="Cancel">
                        <font>
                            <Font size="18.0" />
                        </font>
                    </Button>
                </children>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </HBox>
        </children>
        <styleClass>
            <String fx:value="popupBox" />
            <String fx:value="drop-shadow" />
        </styleClass>
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
    </VBox>
</StackPane>
